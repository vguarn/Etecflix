<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFlix.Filmes.comedia.minhamae"
             Title="Minha mãe é uma peça"
             BackgroundColor="#472C3D">
	<ContentPage.Resources>
		<ResourceDictionary>
			<Style TargetType="Label" x:Key="titulo">
				<Setter Property="FontSize" Value="20"/>
				<Setter Property="HorizontalTextAlignment" Value="Start"/>

				<Setter Property="TextColor" Value="White"/>
			</Style>
			<Style TargetType="Label" x:Key="textoTitulo">
				<Setter Property="FontSize" Value="10"/>
				<Setter Property="HorizontalTextAlignment" Value="Start"/>

				<Setter Property="TextColor" Value="White"/>

			</Style>
		</ResourceDictionary>
	</ContentPage.Resources>
	<Grid RowDefinitions="*,*" ColumnDefinitions="*">
		<WebView Grid.Column="0" Grid.Row="0"
             Source="https://youtu.be/HrST-4WLlbA?si=yidX6OBEnbDjRr9m"/>
		<ScrollView Grid.Row="1" Grid.Column="0">
			<Grid RowDefinitions="*,*" ColumnDefinitions="*, *">
				<Image Grid.Column="0" Grid.Row="0"
                   Source="minhamae.jpg" HeightRequest="300"/>
				<StackLayout VerticalOptions="CenterAndExpand"
                         Grid.Column="1" Grid.Row="0">
					<Label Text="DATA DE LANÇAMENTO:"
                       Style="{StaticResource titulo}"/>
					<Label Text="21 de junho de 2013"
                       Style="{StaticResource textoTitulo}"
                       TextColor="White"/>
					<Label Text="DIREÇÃO" Margin="0, 20, 0, 0"
                       Style="{StaticResource titulo}"/>
					<Label Text="André Pellenz"
                       Style="{StaticResource textoTitulo}"/>
				</StackLayout>
				<StackLayout Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
					<Label Text="SINOPSE" Style="{StaticResource titulo}"/>
					<Label x:Name="sinopse" Text="Dona Hermínia é uma senhora de meia-idade, divorciada do marido, que a trocou por uma mulher mais jovem. Hiperativa, ela não larga o pé de seus filhos Marcelina e Juliano. Um dia, após descobrir que eles a consideram chata, ela resolve sair de casa sem avisar ninguém, deixando todos preocupados. Dona Hermínia decide visitar a querida tia Zélia para desabafar suas tristezas atuais e recordar os bons tempos do passado."
                       TextColor="White"
                       FontSize="Medium" Padding="5"/>
				</StackLayout>
			</Grid>
		</ScrollView>
	</Grid>
</ContentPage>