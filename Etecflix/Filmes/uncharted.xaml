<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFlix.Filmes.acao.uncharted"
             Title="Uncharted"
             BackgroundColor="#472C3D">
	<ContentPage.Resources>
		<ResourceDictionary>
			<Style TargetType="Label" x:Key="titulo">
				<Setter Property="FontSize" Value="20"/>
				<Setter Property="HorizontalTextAlignment" Value="Start"/>

				<Setter Property="TextColor" Value="White"/>
			</Style>
			<Style TargetType="Label" x:Key="textoTitulo">
				<Setter Property="FontSize" Value="10"/>
				<Setter Property="HorizontalTextAlignment" Value="Start"/>

				<Setter Property="TextColor" Value="White"/>

			</Style>
		</ResourceDictionary>
	</ContentPage.Resources>
	<Grid RowDefinitions="*,*" ColumnDefinitions="*">
		<WebView Grid.Column="0" Grid.Row="0"
             Source="https://youtu.be/eHp3MbsCbMg?si=9eqJp7pFDqR4z9Ey"/>
		<ScrollView Grid.Row="1" Grid.Column="0">
			<Grid RowDefinitions="*,*" ColumnDefinitions="*, *">
				<Image Grid.Column="0" Grid.Row="0"
                   Source="uncharted.jpg" HeightRequest="300"/>
				<StackLayout VerticalOptions="CenterAndExpand"
                         Grid.Column="1" Grid.Row="0">
					<Label Text="DATA DE LANÇAMENTO:"
                       Style="{StaticResource titulo}"/>
					<Label Text="17 de Fevereiro de 2022"
                       Style="{StaticResource textoTitulo}"
                       TextColor="White"/>
					<Label Text="DIREÇÃO" Margin="0, 20, 0, 0"
                       Style="{StaticResource titulo}"/>
					<Label Text="Ruben Fleischer"
                       Style="{StaticResource textoTitulo}"/>
				</StackLayout>
				<StackLayout Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
					<Label Text="SINOPSE" Style="{StaticResource titulo}"/>
					<Label x:Name="sinopse" Text="O jovem explorador Nathan Nate Drake, descendente do grande explorador Francis Drake, vive uma vida pacata como bartender em uma cidade, mas acaba se envolvendo com um estranho que viria ser um dos seus mais confiáveis companheiros. Em sua primeira aventura de caça ao tesouro com o sagaz parceiro Victor Sully Sullivan, os dois partem em uma perigosa busca pelo "maior tesouro nunca encontrado", na cidade sul americana de El Dorado, mas a aventura acaba se estendendo por todo o mundo, enquanto rastreiam pistas que podem levar ao irmão há muito perdido de Nathan. Porém, mal sabiam eles que seriam perseguidos por um grupo de mercenários que também buscam pelo tesouro perdido."
                       TextColor="White"
                       FontSize="Medium" Padding="5"/>
				</StackLayout>
			</Grid>
		</ScrollView>
	</Grid>
</ContentPage>