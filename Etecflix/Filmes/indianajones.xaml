<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFlix.Filmes.acao.indianajones"
             Title="Indiana Jones"
             BackgroundColor="#472C3D">
	<ContentPage.Resources>
		<ResourceDictionary>
			<Style TargetType="Label" x:Key="titulo">
				<Setter Property="FontSize" Value="20"/>
				<Setter Property="HorizontalTextAlignment" Value="Start"/>

				<Setter Property="TextColor" Value="White"/>
			</Style>
			<Style TargetType="Label" x:Key="textoTitulo">
				<Setter Property="FontSize" Value="10"/>
				<Setter Property="HorizontalTextAlignment" Value="Start"/>

				<Setter Property="TextColor" Value="White"/>

			</Style>
		</ResourceDictionary>
	</ContentPage.Resources>
	<Grid RowDefinitions="*,*" ColumnDefinitions="*">
		<WebView Grid.Column="0" Grid.Row="0"
             Source="https://youtu.be/VbEVNmAhYOg?si=FBW10y6QINKJAVxG"/>
		<ScrollView Grid.Row="1" Grid.Column="0">
			<Grid RowDefinitions="*,*" ColumnDefinitions="*, *">
				<Image Grid.Column="0" Grid.Row="0"
                   Source="IndianaJones.jpg" HeightRequest="300"/>
				<StackLayout VerticalOptions="CenterAndExpand"
                         Grid.Column="1" Grid.Row="0">
					<Label Text="DATA DE LANÇAMENTO:"
                       Style="{StaticResource titulo}"/>
					<Label Text="30 de junho de 2023"
                       Style="{StaticResource textoTitulo}"
                       TextColor="White"/>
					<Label Text="DIREÇÃO" Margin="0, 20, 0, 0"
                       Style="{StaticResource titulo}"/>
					<Label Text="James Mangold"
                       Style="{StaticResource textoTitulo}"/>
				</StackLayout>
				<StackLayout Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
					<Label Text="SINOPSE" Style="{StaticResource titulo}"/>
					<Label x:Name="sinopse" Text="O lendário herói arqueólogo está de volta neste aguardado capítulo final da icônica franquia, uma incrível e empolgante aventura cinematográfica.."
                       TextColor="White"
                       FontSize="Medium" Padding="5"/>
				</StackLayout>
			</Grid>
		</ScrollView>
	</Grid>
</ContentPage>