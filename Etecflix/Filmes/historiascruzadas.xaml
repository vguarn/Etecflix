<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFlix.Filmes.drama.historiascruzadas"
             Title="Histórias Cruzadas"
             BackgroundColor="#472C3D">
	<ContentPage.Resources>
		<ResourceDictionary>
			<Style TargetType="Label" x:Key="titulo">
				<Setter Property="FontSize" Value="20"/>
				<Setter Property="HorizontalTextAlignment" Value="Start"/>

				<Setter Property="TextColor" Value="White"/>
			</Style>
			<Style TargetType="Label" x:Key="textoTitulo">
				<Setter Property="FontSize" Value="10"/>
				<Setter Property="HorizontalTextAlignment" Value="Start"/>

				<Setter Property="TextColor" Value="White"/>

			</Style>
		</ResourceDictionary>
	</ContentPage.Resources>
	<Grid RowDefinitions="*,*" ColumnDefinitions="*">
		<WebView Grid.Column="0" Grid.Row="0"
             Source="https://youtu.be/ZFCd-D0Sqmg?si=IbV5G8j4fMQBTodR"/>
		<ScrollView Grid.Row="1" Grid.Column="0">
			<Grid RowDefinitions="*,*" ColumnDefinitions="*, *">
				<Image Grid.Column="0" Grid.Row="0"
                   Source="HistoriasCruzadas.jpg" HeightRequest="300"/>
				<StackLayout VerticalOptions="CenterAndExpand"
                         Grid.Column="1" Grid.Row="0">
					<Label Text="DATA DE LANÇAMENTO:"
                       Style="{StaticResource titulo}"/>
					<Label Text="3 de fevereiro de 2012"
                       Style="{StaticResource textoTitulo}"
                       TextColor="White"/>
					<Label Text="DIREÇÃO" Margin="0, 20, 0, 0"
                       Style="{StaticResource titulo}"/>
					<Label Text="Tate Taylor"
                       Style="{StaticResource textoTitulo}"/>
				</StackLayout>
				<StackLayout Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
					<Label Text="SINOPSE" Style="{StaticResource titulo}"/>
					<Label x:Name="sinopse" Text="Nos anos 60, no Mississippi, Skeeter é uma garota da alta sociedade que retorna determinada a se tornar escritora. Ela começa a entrevistar as mulheres negras da cidade, que deixaram suas vidas para trabalhar na criação dos filhos da elite branca, da qual a própria Skeeter faz parte. Aibileen Clark, a emprega da melhor amiga de Skeeter, é a primeira a conceder uma entrevista. Apesar das críticas, Skeeter e Aibileen continuam trabalhando juntas e, aos poucos, conseguem novas adesões."
                       TextColor="White"
                       FontSize="Medium" Padding="5"/>
				</StackLayout>
			</Grid>
		</ScrollView>
	</Grid>
</ContentPage>