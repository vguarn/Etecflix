<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Etecflix.categorias.animacao"
             Title="Animação"
             BackgroundColor="#472C3D">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300,300,300"
                  ColumnDefinitions="*,*"
                  Padding="5">

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                             Source="barbie.jpg" x:Name="btnbarbie"
                             Clicked="btnbarbie_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0"
                             Source="poraguaabaixo.jpg" x:Name="btnagua"
                             Clicked="btnagua_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1"
                             Source="hotarubi.jpg" x:Name="btnhotarubi"
                             Clicked="btnhotarubi_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1"
                             Source="koenokatachi.jpg" x:Name="btnkoenokatachi"
                             Clicked="btnkoenokatachi_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>