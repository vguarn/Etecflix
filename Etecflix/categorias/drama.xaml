<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Etecflix.categorias.drama"
             Title="Drama"
             BackgroundColor="#472C3D">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300,300,300"
                  ColumnDefinitions="*,*"
                  Padding="5">

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                            Source="historiascruzadas.jpg" x:Name="btnhistorias"
                            Clicked="btnhistorias_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0"
                             Source="ofabricantedelagrimas.jpg" x:Name="btnfabricante"
                             Clicked="btnfabricante_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1"
                             Source="queridomenino.jpg" x:Name="btnquerido"
                             Clicked="btnquerido_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1"
                             Source="besouro.jpg" x:Name="btnbesouro"
                             Clicked="btnbesouro_Clicked"/>

            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>