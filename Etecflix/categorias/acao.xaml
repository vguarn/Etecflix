<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Etecflix.categorias.acao"
             Title="Ação"
             BackgroundColor="#472C3D" >
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300,300,300"
                  ColumnDefinitions="*,*"
                  Padding="5">

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0"
                             Source="mazerunner.jpg" x:Name="btnmaze"
                             Clicked="btnmaze_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0"
                             Source="nocoracaodomar.jpg" x:Name="btnmar"
                             Clicked="btnmar_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1"
                             Source="oimpossivel.jpg" x:Name="btnimpossivel"
                             Clicked="btnimpossivel_Clicked"/>

                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1"
                             Source="indianajones.jpg" x:Name="btnindiana"
                             Clicked="btnindiana_Clicked"/>
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>